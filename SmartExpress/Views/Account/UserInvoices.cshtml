@model UserInvoicesViewModel
@{
    ViewBag.Title = "ზედნადებების ისტორია";
}

@section HeaderSection {

    <link href="~/Content/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    @*<link href="~/Content/plugins/dataTables/dataTables.responsive.css" rel="stylesheet" />*@
    <link href="~/Content/plugins/fancybox/jquery.fancybox.css" rel="stylesheet" />
}




<section class="user-invoices">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ზედნადებების ისტორია
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table table-hover" id="invoices-grid">
                            <thead>
                                <tr>
                                    <th style="width: 150px;">ზედნადებების №</th>
                                    <th style="width: 150px;">მიღების თარიღი</th>
                                    <th style="width: 150px;">რეჟიმი</th>
                                    <th style="width: 30px;"></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model.UserInvoceObjects)
                                {
                                    <tr>
                                        <td>@invoice.InvoiceNumber</td>
                                        <td>@invoice.ReceiverDate</td>
                                        <td>@invoice.MessageModeCaption</td>
                                        <td><a href="@invoice.DetailsUrl" class="btn btn-info invoice-details"> <i class="fa fa-info"></i></a></td>
                                        <td></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</section>


@section FooterSection {
    <script src="~/Content/plugins/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/dataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/plugins/fancybox/jquery.fancybox.js"></script>
    <script src="~/Content/plugins/fancybox/FancyMethods.js"></script>
    <script>
        $(function () {
            $('#invoices-grid').DataTable({});

            $(".invoice-details").click(function () {
                var url = $(this).attr("href");

                FancyBox.Init({
                    href: url,
                    width: 1000,
                    height: "100%"
                }).ShowPopup();

                return false;
            });
        });
    </script>
}
